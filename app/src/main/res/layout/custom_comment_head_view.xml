<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/apk/res/com.yubin.news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/layout_custom_comment_head"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_c_comment_head_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秦时明月之装逼神器！"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_c_comment_head_view_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="51.6万次播放"
            android:textColor="@color/text_color"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_icon_c_comment_head_view_up_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="\ue646"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_c_comment_head_view_up_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="268"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/tv_icon_c_comment_head_view_down_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:rotationX="180"
                android:text="\ue646"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_c_comment_head_view_down_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textColor="@color/text_color" />


            <TextView
                android:id="@+id/tv_icon_c_comment_head_view_favorite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="\ue608"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_c_comment_head_view_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="收藏"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.yubin.news.ui.customview.CustomImageView
                android:id="@+id/iv_circle_c_comment_head_view_author_head"
                app:src="@mipmap/qsmy4"
                zhy:type="circle"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <TextView
                android:id="@+id/tv_c_comment_head_view_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="剑圣盖聂"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_c_comment_head_view_attention"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:text=" + 关 注  "
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>