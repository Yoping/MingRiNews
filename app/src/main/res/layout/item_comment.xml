<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/apk/res/com.yubin.news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.yubin.news.ui.customview.CustomImageView
        android:id="@+id/iv_item_comment_author_head"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        app:src="@mipmap/image1"
        zhy:type="circle" />

    <LinearLayout
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_item_comment_author_name"
                android:textColor="@color/mainColor"
                android:text="装逼二叔卫庄"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_icon_item_comment_up"
                android:textSize="18sp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:text="\ue646"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_item_comment_up_count"
                android:text="163"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_item_comment_content"
            android:textSize="16sp"
            android:text="刮风啦，下雨啦，大家快回家收衣服啊！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03-17 15:16"/>

            <TextView
                android:textSize="10sp"
                android:id="@+id/tv_item_comment_reply_count"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/huifu_button"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="16 回复"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>