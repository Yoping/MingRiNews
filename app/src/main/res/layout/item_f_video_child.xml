<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/iv_item_f_video_child_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_pic" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tv_item_f_video_child_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="马云大战麻花疼。。"
            android:textSize="14sp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tv_item_f_video_child_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:text="5:31"
             />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/tv_icon_item_f_video_child_watch_num"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="\ue639" />

        <TextView
            android:id="@+id/tv_item_f_video_child_watch_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="观看数：26541" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/tv_icon_item_f_video_child_up_num"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="\ue646" />

        <TextView
            android:id="@+id/tv_item_f_video_child_up_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4641" />

        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/tv_icon_item_f_video_child_comment_num"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="\ue606" />

        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/tv_item_f_video_child_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论：23" />


    </LinearLayout>

    <TextView
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="6dp" />


</LinearLayout>