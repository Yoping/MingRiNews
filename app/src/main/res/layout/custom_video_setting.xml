<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_c_video_setting_today"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_icon_c_video_setting_today"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="sha" />

            <TextView
                android:id="@+id/tv_c_video_setting_today"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今 日" />

        </LinearLayout>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:id="@+id/layout_c_video_setting_week"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_icon_c_video_setting_week"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="sha" />

            <TextView
                android:id="@+id/tv_c_video_setting_week"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本 周" />

        </LinearLayout>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:id="@+id/layout_c_video_setting_month"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_icon_c_video_setting_month"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="sha" />

            <TextView
                android:id="@+id/tv_c_video_setting_month"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本 月" />

        </LinearLayout>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:id="@+id/layout_c_video_setting_history"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_icon_c_video_setting_history"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="sha" />

            <TextView
                android:id="@+id/tv_c_video_setting_history"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历 史" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>