<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarThemeGreen" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorGreen_light</item>
        <item name="colorPrimaryDark">@color/colorGreen</item>
    </style>

    <style name="ActionBarThemeGrren" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#43a047</item>
        <item name="colorPrimaryDark">#43a047</item>
        <item name="colorAccent">#43a047</item>
        <!--<item name="android:textColor">#FF0000</item>-->
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="colorAccent">@color/mainColor</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <!--<item name="android:textColor">#FF0000</item>-->
    </style>
    <style name="ActionBarThemeBule" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <!--<item name="android:textColor">#FF0000</item>-->
    </style>
    <style name="NoActionBarThemeBule" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <!--<item name="android:textColor">#FF0000</item>-->
    </style>

    <!-- 启动页主题 -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style
        name="custom_dailog"
        parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/custom_dailog_window_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
